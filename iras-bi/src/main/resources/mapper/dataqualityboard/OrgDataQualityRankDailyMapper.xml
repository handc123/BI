<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjrcu.iras.bi.fieldquality.mapper.OrgDataQualityRankDailyMapper">

    <resultMap type="OrgDataQualityRankDaily" id="OrgDataQualityRankDailyResult">
            <result property="id" column="id"/>
            <result property="dataDate" column="data_date"/>
            <result property="orgId" column="org_id"/>
            <result property="orgName" column="org_name"/>
            <result property="rankType" column="rank_type"/>
            <result property="value" column="value"/>
            <result property="rankChange" column="rank_change"/>
            <result property="createTime" column="created_time"/>
            <result property="updateTime" column="updated_time"/>
    </resultMap>

    <sql id="selectOrgDataQualityRankDailyVo">
        select id, data_date, org_id, org_name, rank_type, value, rank_change, created_time, updated_time
        from org_data_quality_rank_daily
    </sql>
    <select id="selectRegionDailyRankByRankType" resultMap="OrgDataQualityRankDailyResult">
        <include refid="selectOrgDataQualityRankDailyVo"/>
        where rank_type = #{rankType}
--         and data_date = DATE_SUB(CURDATE(), INTERVAL 1 DAY)
        order by value desc
    </select>
    <select id="selectPageByRankTypeDataDate" resultMap="OrgDataQualityRankDailyResult">
        <include refid="selectOrgDataQualityRankDailyVo"/>
        where rank_type = #{rankType}
        <if test="dataDate != null and dataDate != ''">
            and data_date = #{dataDate}
        </if>
        order by value desc
    </select>

</mapper>