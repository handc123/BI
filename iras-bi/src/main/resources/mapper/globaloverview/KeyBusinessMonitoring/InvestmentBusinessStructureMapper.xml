<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjrcu.iras.bi.globaloverview.mapper.KeyBusinessMonitoring.InvestmentBusinessStructureMapper">
    <resultMap id="InvestmentBusinessStructureResult" type="com.zjrcu.iras.bi.globaloverview.domain.model.KeyBusinessMonitoring.InvestmentBusinessStructure">
        <id property="id" column="id" />
        <result property="orgName" column="org_name" />
        <result property="regionName" column="region_name" />
        <result property="dataDate" column="data_date"/>
        <result property="category" column="category" />
        <result property="investmentBalance" column="investment_balance" />
        <result property="createTime" column="created_time"/>
        <result property="updateTime" column="updated_time"/>
    </resultMap>
    <select id="selectInvestmentBusinessStructure" resultMap="InvestmentBusinessStructureResult">
        select * from investment_business_structure
        where region_name = #{globalOverviewRequestQO.regionName}
          and data_date = #{globalOverviewRequestQO.dataDate}
    </select>
</mapper>