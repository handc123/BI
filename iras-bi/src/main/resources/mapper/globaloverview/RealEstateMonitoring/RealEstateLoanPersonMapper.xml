<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjrcu.iras.bi.globaloverview.mapper.RealEstateMonitoring.RealEstateLoanPersonMapper">
    <resultMap id="RealEstateLoanPersonResult" type="com.zjrcu.iras.bi.globaloverview.domain.model.RealEstateMonitoring.RealEstateLoanPerson">
        <result property="dataDate" column="data_date"/>
        <result property="loanPerson" column="loan_person"/>
        <result property="loanType" column="loan_type"/>
        <result property="regionName" column="region_name"/>
        <result property="id" column="id"/>
    </resultMap>
    <select id="selectRealEstateLoanPersonRatio" resultMap="RealEstateLoanPersonResult">
        select data_date,
               SUM(loan_person) AS loan_person,
               loan_type
        from real_estate_loan_person
        where region_name = #{globalOverviewRequestQO.regionName}
        and data_date = #{globalOverviewRequestQO.dataDate}
        group by loan_type
        order by data_date  asc
    </select>
</mapper>