<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjrcu.iras.bi.platform.mapper.ComponentTemplateMapper">
    
    <resultMap type="com.zjrcu.iras.bi.platform.domain.ComponentTemplate" id="ComponentTemplateResult">
        <result property="id"    column="id"    />
        <result property="templateName"    column="template_name"    />
        <result property="templateDesc"    column="template_desc"    />
        <result property="componentType"    column="component_type"    />
        <result property="templateConfig"    column="template_config"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTemplateVo">
        select id, template_name, template_desc, component_type, template_config, 
               create_by, create_time, update_time
        from bi_component_template
    </sql>

    <select id="selectTemplateList" parameterType="com.zjrcu.iras.bi.platform.domain.ComponentTemplate" resultMap="ComponentTemplateResult">
        <include refid="selectTemplateVo"/>
        <where>  
            <if test="templateName != null and templateName != ''">
                AND template_name like concat('%', #{templateName}, '%')
            </if>
            <if test="componentType != null and componentType != ''">
                AND component_type = #{componentType}
            </if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectTemplateById" parameterType="Long" resultMap="ComponentTemplateResult">
        <include refid="selectTemplateVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTemplate" parameterType="com.zjrcu.iras.bi.platform.domain.ComponentTemplate" useGeneratedKeys="true" keyProperty="id">
        insert into bi_component_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name,</if>
            <if test="templateDesc != null">template_desc,</if>
            <if test="componentType != null and componentType != ''">component_type,</if>
            <if test="templateConfig != null and templateConfig != ''">template_config,</if>
            <if test="createBy != null">create_by,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">#{templateName},</if>
            <if test="templateDesc != null">#{templateDesc},</if>
            <if test="componentType != null and componentType != ''">#{componentType},</if>
            <if test="templateConfig != null and templateConfig != ''">#{templateConfig},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateTemplate" parameterType="com.zjrcu.iras.bi.platform.domain.ComponentTemplate">
        update bi_component_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name = #{templateName},</if>
            <if test="templateDesc != null">template_desc = #{templateDesc},</if>
            <if test="componentType != null and componentType != ''">component_type = #{componentType},</if>
            <if test="templateConfig != null and templateConfig != ''">template_config = #{templateConfig},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTemplateById" parameterType="Long">
        delete from bi_component_template where id = #{id}
    </delete>

    <delete id="deleteTemplateByIds" parameterType="Long">
        delete from bi_component_template where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
